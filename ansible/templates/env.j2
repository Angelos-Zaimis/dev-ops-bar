# Generated by Ansible - {{ ansible_date_time.iso8601 }}
# Environment: {{ environment | default('development') }}

# Database Configuration
POSTGRES_VERSION=16
POSTGRES_USER={{ postgres_user | default('testuser') }}
POSTGRES_PASSWORD={{ vault_postgres_password }}
SERVICE_DB_NAME=datasource_servicedb
INVENTORY_DB_NAME=datasource_inventorydb
SERVICE_DB_PORT=5009
INVENTORY_DB_PORT=5010

# Kafka Configuration
KAFKA_VERSION=7.1.0-1-ubi8
KAFKA_BROKER_ID=1
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# Service Configuration
MIDDLEWARE_SERVICE_PORT=8881
MIDDLEWARE_INVENTORY_PORT=8882
SPRING_PROFILE={{ environment | default('local') }}

# Java Options
JAVA_OPTS={{ java_opts | default('-XX:-OmitStackTraceInFastThrow -Xmx512m -Xms256m') }}

# CORS Configuration
CORS_ORIGINS={{ cors_origins | default('http://localhost:*,http://127.0.0.1:*') }}

# OAuth Configuration
OAUTH_CLIENT_ID={{ oauth_client_id | default('client') }}
OAUTH_CLIENT_SECRET={{ vault_oauth_client_secret }}
OAUTH_ENABLED=true

# Flyway
FLYWAY_LOCATIONS=classpath:db/migration/schema,classpath:db/migration/data/{{ environment | default('dev') }}

# Network
NETWORK_NAME={{ docker_network }}

